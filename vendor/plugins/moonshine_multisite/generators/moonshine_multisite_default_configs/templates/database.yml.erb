defaults: &defaults
  adapter: mysql
  username: <%= db_user %>
  password: <%= password %>
  host: <%= db_host %>

development:
  database: <%= database %>
  <<: *defaults

test:
  database: <%= server %>_<%= app %>_test
  <<: *defaults

production:
  database: <%= database %>
  <<: *defaults

ciministry_development:
  database: <%= multisite_config_hash[:servers][server][:db_names][:intranet][stage] %>
  <<: *defaults

ciministry_production:
  database: <%= multisite_config_hash[:servers][server][:db_names][:intranet][stage] %>
  <<: *defaults
