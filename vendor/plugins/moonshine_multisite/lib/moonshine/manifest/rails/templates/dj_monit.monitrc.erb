check process dj_<%= configuration[:branch] %>
  with pidfile <%= configuration[:deploy_to] %>/shared/tmp/pids/delayed_job.pid
  start program = "/bin/su -c '/usr/bin/env RAILS_ENV=production <%= configuration[:deploy_to] %>/current/script/delayed_job start' - <%= configuration[:user] %>"
  stop program = "/bin/su -c '/usr/bin/env RAILS_ENV=production <%= configuration[:deploy_to] %>/current/script/delayed_job stop' - <%= configuration[:user] %>"
  if cpu > 80% for 2 cycles then stop
  if loadavg(5min) greater than 10.0 for 8 cycles then stop
  if mem > 120 MB for 5 cycles then stop
