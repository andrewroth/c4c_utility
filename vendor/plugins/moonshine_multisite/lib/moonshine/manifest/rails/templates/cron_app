#!/bin/sh
cd <%= configuration[:deploy_to] + "/current" %>
sudo -u <%= configuration[:user] %> rake db:sessions:clear
sudo -u <%= configuration[:user] %> rake tmp:cache:clear

cd <%= configuration[:utility] %>
sudo -u <%= configuration[:user] %> rake <%= configuration[:application] %>:dump:<%= configuration[:server_only] %>:<%= configuration[:stage_only] %>
